<body class="wrapper" >
  <br>
<% if member_signed_in? %>


  <h3>you have succesfully signed in</h3>
  <br>

<h1>Listing Posts</h1>

<table class="table">
  <thead>
    <tr class="row header green">
      <th class="cell" >Name</th>
      <th class="cell">Title</th>
      <th class="cell">Url</th>
      <th class="cell">Createdat</th>
      <th class="cell">Content</th>
      <th class="cell">Member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="row">
        <td class="cell"><%= post.name %></td>
        <td class="cell"><%= post.title %></td>
        <td class="cell"><%= post.url %></td>
        <td class="cell"><%= post.createdat %></td>
        <td class="cell"><%= post.content %></td>
        <td class="cell"><%= post.member.email %></td>
        <td class="cell"><%= link_to 'Show', post %></td>
        <% if current_member.email == post.member.email %>
          <td class="cell"><%= link_to 'Edit', edit_post_path(post) %></td>
          <td class="cell"><%= link_to 'Destroy', post, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>




  <%= link_to "Sign Out", destroy_member_session_path, :method => :delete %>
  

